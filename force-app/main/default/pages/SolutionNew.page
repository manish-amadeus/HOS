<apex:page standardController="Solution" extensions="SolutionNewExtension">
    <apex:form id="frmNewSolution">

    <apex:sectionHeader subtitle="New Solution" title="NI Support"></apex:sectionHeader>

        <apex:pageBlock title="SolutionDetail" mode="edit">
            
            <apex:pageMessages />
            
            <apex:pageBlockButtons >
                <apex:commandButton action="{!saveSolution}" value="Save"/>
                <apex:commandButton action="{!cancel}" value="Cancel"/>
            </apex:pageBlockButtons>       
        
            <apex:pageBlockSection title="Solution Information" collapsible="False" columns="2"> 

                <apex:inputField id="txtSol01" value="{!Solution.Parent_Solution__c}"/>
                <apex:inputField id="txtSol02" value="{!Solution.RecordTypeId}"/>
                <apex:inputField id="txtSol03" value="{!Solution.Product_Group__c}"/>
                <apex:inputField id="txtSol04" value="{!Solution.Hidden_Support_Priority__c}"/>
                <apex:inputField id="txtSol05" value="{!Solution.Version__c}"/>
                <apex:inputField id="txtSol06" value="{!Solution.IsPublished}"/>
                <apex:inputField id="txtSol07" value="{!Solution.Part__c}"/>
                <apex:inputField id="txtSol08" value="{!Solution.Fix_Revision__c}"/>
                <apex:inputField id="txtSol09" value="{!Solution.AttachedCRs__c}"/>
                <apex:inputField id="txtSol10" value="{!Solution.Origin_Case__c}"/>
                
            </apex:pageBlockSection>
                        
                        
            <apex:pageBlockSection title="Solution Description" collapsible="False" columns="1">
                <apex:pageBlockSectionItem id="SolutionTitle">
                    <apex:outputLabel >Subject</apex:outputLabel>
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                    <apex:outputPanel layout="block" styleClass="requiredBlock"/>
                        <apex:inputField value="{!Solution.SolutionName}" style="width: 90%;"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>
                
                <apex:inputField value="{!Solution.Description__c}" style="width: 90%;" />
         
                <apex:inputField value="{!Solution.SolutionNote}" style="width: 90%;" />
                
            </apex:pageBlockSection>
                        
            <apex:pageBlockSection title="Internal Comments" collapsible="False" columns="2">
                
                <apex:inputField value="{!Solution.Internal_Notes__c}" style="width: 90%;" />

            </apex:pageBlockSection>
            
        </apex:pageBlock>
        
    </apex:form>
    
</apex:page>