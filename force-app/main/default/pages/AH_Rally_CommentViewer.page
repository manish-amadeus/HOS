<apex:page standardController="Case" extensions="AH_Rally_CommentList_Ctlr" lightningStylesheets="true">
    <apex:form >
        <apex:pageBlock title=" Rally Discussions">
            <apex:pageblockTable value="{!Commenthistory}" var="rec" columns="2">
                <apex:column headerValue="Comments">
                    <apex:outputtext value="{!rec}" escape="false"/>               
                </apex:column> 
                <apex:column headerValue="Owner">
                    <apex:outputtext value="{!Commenthistory[rec]}" escape="false"/>               
                </apex:column>
            </apex:pageblockTable>     
        </apex:pageBlock> 
        <apex:commandlink value=" Less..." action="{!Mainpage}"/>
    </apex:form>
</apex:page>