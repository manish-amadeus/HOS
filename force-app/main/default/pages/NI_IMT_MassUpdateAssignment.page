<apex:page standardController="pse__Assignment__c" recordSetVar="assignRecs" title="Update Assignments Status" extensions="NI_IMT_MassUpdateAssignment">
<apex:sectionHeader title="{!$Label.Assignment_Status_Update_Title}"  />
<apex:form >
	
	<apex:pageBlock title="{!$Label.Assignment_Status_Update_Select_Status}" rendered="{!IF((isError == false), true , false)}" ><!--  rendered="False" -->
	
	<apex:pageMessages />
	{!$Label.Assignment_Status_Update_Information}
	    <apex:pageBlockButtons location="bottom" >
	        <apex:commandButton action="{!doSave}" value="Update" />
	        <apex:commandButton action="{!cancel}" value="Cancel" immediate="true"/>
	    </apex:pageBlockButtons>
	    <apex:pageBlockSection columns="2" collapsible="false" >
	        <apex:inputField value="{!NewAssignment.pse__Status__c}"/>
	        <apex:inputField value="{!NewAssignment.Cancellation_Reason__c}"/>
	        
	    </apex:pageBlockSection>
	</apex:pageBlock>
	
	<apex:pageBlock title="{!$Label.Assignment_Status_Update_Status_To_Change}" rendered="{!IF((isError == false && NOT(ISBLANK(Selected))), true , false)}">
		<apex:pageBlockTable value="{!Selected}" var="cs">
			<apex:column value="{!cs.Name}"/>
			<apex:column value="{!cs.pse__Status__c}"/>
			<apex:column value="{!cs.Cancellation_Reason__c}"/>
		</apex:pageBlockTable>		
	</apex:pageBlock>
	<apex:pageBlock rendered="{!IF((isError == true ),true , false)}">
		<apex:pageMessages />
	</apex:pageBlock>
	
</apex:form>
</apex:page>