<apex:page standardController="Case" extensions="NICaseActivities" showHeader="false" sidebar="false">
    <apex:form >
        <apex:commandButton id="btnPrint" value="Print" onclick="window.print(); return false;"/>
        <apex:pageBlock >
            <apex:pageBlockSection title="" collapsible="False" columns="1" showHeader="false">
                <apex:outputText value="{!Case.Account.Name}" />
                <apex:pageBlockSectionItem id="ContactName">
                    <apex:outputLabel >Contact Name</apex:outputLabel>
                    <apex:outputText value="{!Case.Contact.Name}" /> 
                </apex:pageBlockSectionItem>                  
                <apex:outputText value="{!Case.CaseNumber}" />                
                <apex:outputText value="{!Case.Subject}" />
                <apex:pageBlockSectionItem id="CaseDescription">
                    <apex:outputLabel >Description</apex:outputLabel>
                    <apex:outputText value="{!getDescription}" escape="false" />
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!results}" var="cn" rules="">
                    <apex:column headerValue="Chronological Case Activity" >
                        <apex:outputText value="{!cn}" escape="false" />
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>