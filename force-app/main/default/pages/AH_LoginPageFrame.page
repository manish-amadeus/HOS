                    text-align:left;
                    display:-ms-flexbox;
                    display:flex;
                    -ms-flex-direction:column;
                    flex-direction:column;
                    -ms-flex-pack:center;
                    justify-content:center
                }
                .hero-text {
                    font-family: AmadeusThin !important;
                    text-align: center;
                    position: absolute;
                    top: 180px;
                    left: 220px;
                    transform: translate(-50%, -50%);
                    color: white;
                }
                .container
