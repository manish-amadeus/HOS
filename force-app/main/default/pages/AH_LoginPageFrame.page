<apex:page showHeader="false" sidebar="false">
    
    <html>
        <head>
            <style>
                body {
                    height: 100vh;
                    background-image: url('https://amadeus-hospitality.secure.force.com/Forms/resource/1581002560000/LoginPageFrameImage?');
                    background-repeat: no-repeat;
                    background-color: #FFFFFF;
                    background-size: cover;
                }                
                @font-face {
                    font-family: 'AmadeusThin';
                    src: url('https://amadeus-hospitality.secure.force.com/Forms/resource/1517586134000/AmadeusThinFont/amadeus-thin-web.woff?orgId=00D300000006Ctn') format('woff');
                    font-weight: normal;
                    font-style: normal;                
                } 
                .hero-overlay
                {
                    background:url('https://amadeus-hospitality.secure.force.com/Forms/resource/1581002656000/ahcc_shape5?') no-repeat;
