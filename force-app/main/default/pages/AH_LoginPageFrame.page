            <apex:form >    
                <div class="container"> 
                    <div class="hero-overlay">
                        <div class="hero-text">
                            <apex:outputText id="lblTitle" style="font-size:30px;color:#FFFFFF;" value="Amadeus Hospitality" />
                            <br/>
                            <br/>
                            <apex:outputText id="lblDesc" style="font-size:24px;color:#FFFFFF;" value="Salesforce Login" />
