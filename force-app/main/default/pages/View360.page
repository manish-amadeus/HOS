<apex:page Controller="NI_ThreeSixtyViewController"  showHeader="false"  sidebar="false">
<apex:pageBlock >
 <table width="100%">
 
 <tr >
 <td colspan="2"><apex:sectionHeader title="360 View of {!account.name} {!niOrgDetails.Name}" />
 </td>
 </tr>
 
 <tr width="100%" >
 <td colspan="2">
     <apex:dataTable value="{!messages}" var="m" id="theTable">
            <apex:column >
              
                <apex:outputText value="{!m.Message__c}"/>
            </apex:column>
    </apex:dataTable>
 </td>
 </tr>
 

<tr height="100%">
<td rowspan="4" valign="top" width="50%">
<apex:tabPanel >
    <apex:tab label="Org Usage" >
     <apex:iframe src="/{!orgUsage.Id}?isdtp=vw&pv0={!niOrgDetails.Name}" scrolling="true" height="1000px" />
    </apex:tab>
    
    <apex:tab label="Org Stats" >
     <apex:iframe src="/{!orgStats.Id}?isdtp=vw&pv0={!niOrgDetails.Name}" scrolling="true" height="1000px"/>
    </apex:tab>
    
     <apex:tab label="Project Status" >
     <apex:iframe src="/{!projectStatus.Id}?isdtp=vw&pv0={!Account.AccountNumber}" scrolling="true" height="1000px"/>
    </apex:tab>
    <apex:tab label="Cases by Status" >
     <apex:iframe src="/{!caseByStatus.Id}?isdtp=vw&pv0={!Account.AccountNumber}" scrolling="true" height="1000px"/>
    </apex:tab>
     <apex:tab label="Cases by Product" >
     <apex:iframe src="/{!caseByProduct.Id}?isdtp=vw&pv0={!Account.AccountNumber}" scrolling="true" height="1000px"/>
    </apex:tab>
</apex:tabPanel>

</td>
</tr>
<tr>   
   <td  height="100%">
    <apex:pageBlock title="Installed Deployment Instances">
       <apex:pageBlockTable value="{!assets}" var="asset" title="Deployment Instances">
            <apex:column headerValue="Name"><apex:outputLink value="/{!asset.Id}" target="_blank"> {!asset.name} </apex:outputLink></apex:column>
             <apex:column headerValue="Install date" value="{!asset.InstallDate}"/> 
             <apex:column headerValue="Version" value="{!asset.Version__c}"/> 
        </apex:pageBlockTable>    
    </apex:pageBlock>
  
   </td>
 </tr>
<tr>
   <td height="100%">
    <apex:pageBlock title="Tasks in the past 30 days">
     <apex:pageBlockTable value="{!tasks}" var="t">
        <apex:column headerValue="Subject" >
             <apex:outputLink value="/{!t.Id}" target="_blank"> {!t.subject} </apex:outputLink>
         </apex:column>
          <apex:column headerValue="Assigned To" value="{!t.OwnerId}"/> 
          <apex:column headerValue="Due Date" value="{!t.ActivityDate}"/> 
      </apex:pageBlockTable>
    </apex:pageBlock>   
   </td>
</tr>
<tr>   
   <td height="100%" valign="top"> 
   <apex:pageBlock title="Closed/Won Opportunities">
    <apex:pageBlockTable value="{!opportunities}" var="opp">
        <apex:column headerValue="Name">
         <apex:outputLink value="/{!opp.Id}" target="_blank"> {!opp.name} </apex:outputLink>
        </apex:column>
         <apex:column headerValue="Opportunity Number" value="{!opp.Opportunity_Number__c}"/> 
         <apex:column headerValue="Amount" value="{!opp.Amount}"/> 
         <apex:column headerValue="Sales Person" value="{!opp.OwnerID}"/> 
    </apex:pageBlockTable>    
   </apex:pageBlock>    
   </td>
</tr>

  
 </table>
 </apex:pageBlock>



<apex:detail subject="{!$CurrentPage.parameters.aid}" relatedList="false" title="false"/>
</apex:page>