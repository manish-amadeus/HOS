<apex:page standardController="SFDC_CSP_Development_Request__c" extensions="CRDetailExtension" tabStyle="CR_Search__tab"> 
    
    <apex:form id="frmCR">
        
        <apex:sectionHeader subtitle="Change Request" title="Newmarket Support"></apex:sectionHeader>
        
        <apex:pageMessages />   
        
        <apex:pageBlock title="">
            
            <apex:pageBlockButtons >
                <apex:commandButton value="Attach to Case {!strCaseNumber}" action="{!attachCase}" rendered="{!showAttachCaseButton}" />
                <apex:commandButton value="Edit" action="{!editCR}" />
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection title="Change Request Information" collapsible="True" columns="2">
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Name}"/>                  
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.AccountPriorityID__c}"/>  
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Product_Group__c}"/>                  
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Product_Management_Priority__c}"/>  
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Version__c}"/>                  
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Quality_Assurance_Priority__c}"/>  
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Part__c}"/>                  
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Support_Priority__c}"/>  
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Child_Solution__c}"/>  
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Requestor__c}"/> 
                
            </apex:pageBlockSection>             
            
            <apex:pageBlockSection title="Change Request Detail" collapsible="False" columns="1">
                
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Title__c}"/> 
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Description__c}"/>   
                <apex:outputField value="{!SFDC_CSP_Development_Request__c.Notes__c}"/> 
                
            </apex:pageBlockSection>            
            
        </apex:pageBlock>
        
    </apex:form>
    
    <apex:relatedList list="Cases__r" /> 
    
</apex:page>