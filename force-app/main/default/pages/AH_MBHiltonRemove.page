    <script language="JavaScript" type="text/javascript">

        function Validate(theForm) 
        {

            // PROPERTY CHANGE IN MB VALIDATION
            var myPicklistElement = document.getElementById('00N60000001Zzxl');
            var myPicklistValue = myPicklistElement.options[myPicklistElement.selectedIndex].value;
            
            if (myPicklistValue == "--None--") {
                alert("Please choose a value for the \"Property Change in Meetingbroker\" field.");
                myPicklistElement.focus();
                return (false);
            }

            // FIRST NAME VALIDATION 
            if (theForm.first_name.value == "") {
                alert("Please enter a value for the \"First Name\" field.");
                theForm.first_name.focus();
                return (false);
            }
            if (theForm.first_name.value.length < 1) {
                alert("Please enter at least 1 characters in the \"First Name\" field.");
                theForm.first_name.focus();
                return (false);
            }

            // LAST NAME VALIDATION 
            if (theForm.last_name.value == "") {
                alert("Please enter a value for the \"Last Name\" field.");
                theForm.last_name.focus();
                return (false);
            }
            if (theForm.last_name.value.length < 1) {
                alert("Please enter at least 1 characters in the \"Last Name\" field.");
                theForm.last_name.focus();
                return (false);
            }

            // REQUESTER EMAIL VALIDATION 
            if (theForm.email.value == "") {
                alert("Please enter a value for the \"Email\" field.");
                theForm.email.focus();
                return (false);
            }
            if (theForm.email.value.length < 1) {
                alert("Please enter a value for the \"Email\" field.");
                theForm.email.focus();
                return (false);
            }

            // REQUESTER PHONE VALIDATION 
            if ((theForm.phone.value == "") || (theForm.phone.value.length < 1)) 
            {
                alert("Please enter a value for the \"Requester Phone\" field.");
                theForm.phone.focus();
                return (false);
            }

            // HIDB PROPERTY LEGAL NAME VALIDATION 
            if (theForm.company.value == "") {
                alert("Please enter a value for the \"HIDB Property Legal Name\" field.");
                theForm.company.focus();
                return (false);
            }

            
            // PROPERTY HOLIDEX CODE VALIDATION
            if (theForm.Prop_Holidex_Code__c.value == "") {
                alert("Please enter a value for the \"Inn Code\" field.");
                theForm.Prop_Holidex_Code__c.focus();
                return (false);
            }

            
            theForm.description.value = "Inn Code = " + theForm.Prop_Holidex_Code__c.value;

            return (true);
        }

    </script>

