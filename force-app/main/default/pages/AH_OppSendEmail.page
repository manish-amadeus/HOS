<apex:page sidebar="false" standardController="Opportunity" Extensions="AH_OppSendEmailExt">
    <apex:pageMessages escape="false" /> 
    <apex:form >
        <apex:pageBlock title="Opportunity Details "  >
            <apex:pageBlockSection columns="2" title="Opportunity Details" rendered="{!opp.id!=NULL}" >                
                <apex:outputField value="{!opp.Name}"/>
                <apex:inputField value="{!opp.Opportunity_Number__c}"/>
                <apex:outputField value="{!opp.CaseId__c}"/>
                <apex:outputField value="{!opp.CreatedDate}"/>
                <apex:outputText title="Created By" value="{!opp.CreatedBy.Name}"/>
                <apex:outputField value="{!opp.Notes_to_Sales__c}"/>
                <apex:inputField value="{!opp.Notes_from_Sales_Escalation__c}"/>
                <apex:outputField value="{!opp.OwnerId}"/>
                <!--<apex:inputField value="{!nt.body}" rendered="if({!nt.body}!=NULL)"/>   -->
            </apex:pageBlockSection>                    
            <div align="center" draggable="false" >
                <apex:commandButton value="Send Email" action="{!sendEmail}" disabled="{!disableButton}"/>  
                <!--apex:commandButton onClick="window.top.close();" value="Close" /!-->
                <apex:commandButton value="Back" action="{!closeAndReturn}" />
            </div>            
        </apex:pageBlock>
    </apex:form>
</apex:page>