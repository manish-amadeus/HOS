<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Completed_Record_Must_Have_Complete_Date</fullName>
    <active>true</active>
    <errorConditionFormula>AND ( 
    ISPICKVAL(State__c, &quot;Complete&quot;),  
    ISBLANK(Complete_Date__c)
)</errorConditionFormula>
    <errorDisplayField>Complete_Date__c</errorDisplayField>
    <errorMessage>A record marked complete must have a valid Complete Date specified.</errorMessage>
</ValidationRule>
