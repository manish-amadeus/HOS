<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IssueResolution_CaseClosing_Q03</fullName>
    <active>true</active>
    <description>&quot;Refers/transfer call or case to correct&quot; must be 0, 1 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,5&quot;, TEXT(Refers_Transfer_To_Correct_Department__c))),
        ISNULL(Refers_Transfer_To_Correct_Department__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Refers_Transfer_To_Correct_Department__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
