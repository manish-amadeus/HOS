    <active>true</active>
    <description>&quot;Demonstrates Empathy/apology statements&quot; must be 0, 1, 3 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,3,5&quot;, TEXT(Demonstrates_Empathy_Apology_Statements__c))),
        ISNULL(Demonstrates_Empathy_Apology_Statements__c)
    )
)</errorConditionFormula>
