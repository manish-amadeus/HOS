<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IssueResolution_CaseClosing_Q04</fullName>
    <active>true</active>
    <description>&quot;Final e-mail (all issues addressed)&quot; must be 0, 1 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,5&quot;, TEXT(Final_Email_All_Issues_Addressed__c))),
        ISNULL(Final_Email_All_Issues_Addressed__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Final_Email_All_Issues_Addressed__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
