<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Day_Phone_Call</fullName>
    <active>true</active>
    <description>Value can not be 2,3 or 4.</description>
    <errorConditionFormula>Or(
First_Day_Phone_Call_To_The_Customer__c = 2,
First_Day_Phone_Call_To_The_Customer__c = 3,
First_Day_Phone_Call_To_The_Customer__c = 4,
First_Day_Phone_Call_To_The_Customer__c &gt; 5
)</errorConditionFormula>
    <errorDisplayField>First_Day_Phone_Call_To_The_Customer__c</errorDisplayField>
    <errorMessage>Please update your value to 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
