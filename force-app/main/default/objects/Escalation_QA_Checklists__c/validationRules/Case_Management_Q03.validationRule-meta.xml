<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Management_Q03</fullName>
    <active>true</active>
    <description>&quot;Notes/comments made &amp; actions taken&quot; must be 0, 1, 3 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,3,5&quot;, TEXT(Notes_Comments_Made_And_Actions_Taken__c))),
        ISNULL(Notes_Comments_Made_And_Actions_Taken__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Notes_Comments_Made_And_Actions_Taken__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO, 3 for PARTIALLY COMPLETED or 5 for YES.</errorMessage>
</ValidationRule>
