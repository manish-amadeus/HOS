<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Management_Q06</fullName>
    <active>true</active>
    <description>&quot;Customer emails answered &amp; actioned&quot; must be 0, 1 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,5&quot;, TEXT(All_Client_Emails_Answered_And_Actioned__c))),
        ISNULL(All_Client_Emails_Answered_And_Actioned__c)
    )
)</errorConditionFormula>
    <errorDisplayField>All_Client_Emails_Answered_And_Actioned__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
