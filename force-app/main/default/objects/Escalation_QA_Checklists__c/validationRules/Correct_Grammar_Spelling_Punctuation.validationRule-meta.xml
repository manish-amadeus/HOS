<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Correct_Grammar_Spelling_Punctuation</fullName>
    <active>true</active>
    <description>Value can not be 2,4 or 5</description>
    <errorConditionFormula>Or(
Correct_Grammar_Spelling_Punctuation__c = 2,
Correct_Grammar_Spelling_Punctuation__c = 4,
Correct_Grammar_Spelling_Punctuation__c &gt; 5

)</errorConditionFormula>
