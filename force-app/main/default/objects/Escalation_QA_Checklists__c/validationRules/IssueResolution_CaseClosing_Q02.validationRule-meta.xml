<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IssueResolution_CaseClosing_Q02</fullName>
    <active>true</active>
    <description>&quot;All steps are taken to resolve&quot; must be 0, 1 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,5&quot;, TEXT(All_Steps_Are_Taken_To_Resolve__c))),
        ISNULL(All_Steps_Are_Taken_To_Resolve__c)
    )
)</errorConditionFormula>
    <errorDisplayField>All_Steps_Are_Taken_To_Resolve__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
