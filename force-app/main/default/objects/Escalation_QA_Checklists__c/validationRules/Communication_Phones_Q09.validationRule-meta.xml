<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Communication_Phones_Q09</fullName>
    <active>true</active>
    <description>&quot;Provided case # to customer verbally&quot; must be 0, 1 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,5&quot;, TEXT(Provided_CaseNumber_To_Client_Verbally__c))),
        ISNULL(Provided_CaseNumber_To_Client_Verbally__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Provided_CaseNumber_To_Client_Verbally__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
