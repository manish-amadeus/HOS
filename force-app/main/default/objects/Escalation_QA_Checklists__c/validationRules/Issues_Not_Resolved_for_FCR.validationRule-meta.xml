<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Issues_Not_Resolved_for_FCR</fullName>
    <active>true</active>
    <description>Value can not be 2,3 or 4.</description>
    <errorConditionFormula>Or(
Issue_Not_Resolved_FCR_Next_Steps__c = 2,
Issue_Not_Resolved_FCR_Next_Steps__c = 3,
Issue_Not_Resolved_FCR_Next_Steps__c = 4,
Issue_Not_Resolved_FCR_Next_Steps__c &gt; 5

)</errorConditionFormula>
    <errorDisplayField>Issue_Not_Resolved_FCR_Next_Steps__c</errorDisplayField>
    <errorMessage>Please update your value to 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
