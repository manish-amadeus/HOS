<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Offers_Additional_Assistance</fullName>
    <active>true</active>
    <description>Value can not be 2,3 or 4.</description>
    <errorConditionFormula>Or(
Offers_Additional_Assistance__c = 2,
Offers_Additional_Assistance__c = 3,
Offers_Additional_Assistance__c = 4,
Offers_Additional_Assistance__c &gt; 5

)</errorConditionFormula>
    <errorDisplayField>Offers_Additional_Assistance__c</errorDisplayField>
    <errorMessage>Please update your value to 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
