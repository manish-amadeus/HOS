<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Communication_Emails_Q02</fullName>
    <active>true</active>
    <description>&quot;Correct template chosen for case&quot; value can not be greater than 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,2,3,4,5&quot;, TEXT(Correct_Template_Chosen_For_Case__c))),
        ISNULL(Correct_Template_Chosen_For_Case__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Correct_Template_Chosen_For_Case__c</errorDisplayField>
    <errorMessage>Please update your value to be between 0 and 5.</errorMessage>
</ValidationRule>
