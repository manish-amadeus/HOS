<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Use_Customers_Name</fullName>
    <active>true</active>
    <description>Value can not be 2,3 or 4.</description>
    <errorConditionFormula>Or(
Uses_Customers_Name__c = 2,
Uses_Customers_Name__c = 3,
Uses_Customers_Name__c = 4,
Uses_Customers_Name__c &gt; 5

)</errorConditionFormula>
    <errorDisplayField>Uses_Customers_Name__c</errorDisplayField>
    <errorMessage>Please update your value to 0 for N/A, 1 for NO or 5 for YES.</errorMessage>
</ValidationRule>
