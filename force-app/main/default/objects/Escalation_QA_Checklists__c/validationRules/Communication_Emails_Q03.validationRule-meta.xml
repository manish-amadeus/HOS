<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Communication_Emails_Q03</fullName>
    <active>true</active>
    <description>&quot;Acknowledge/ display/understand issue&quot; must be 0, 1, 3 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,3,5&quot;, TEXT(Acknowledges_Displays_Understands_Issue__c))),
        ISNULL(Acknowledges_Displays_Understands_Issue__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Acknowledges_Displays_Understands_Issue__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO, 3 for PARTIALLY COMPLETED or 5 for YES.</errorMessage>
</ValidationRule>
