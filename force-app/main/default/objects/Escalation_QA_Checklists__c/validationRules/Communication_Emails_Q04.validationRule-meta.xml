<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Communication_Emails_Q04</fullName>
    <active>true</active>
    <description>&quot;Correct grammar/spelling/punctuation&quot; must be 0, 1, 3 or 5</description>
    <errorConditionFormula>AND (
    RecordType.DeveloperName = &quot;Customer_Care_Quality_Form&quot;, 
    OR (
        NOT(CONTAINS(&quot;0,1,3,5&quot;, TEXT(Correct_Grammar_Spelling_Punctuation__c))),
        ISNULL(Correct_Grammar_Spelling_Punctuation__c)
    )
)</errorConditionFormula>
    <errorDisplayField>Correct_Grammar_Spelling_Punctuation__c</errorDisplayField>
    <errorMessage>Please update your value to: 0 for N/A, 1 for NO, 3 for PARTIALLY COMPLETED or 5 for YES.</errorMessage>
</ValidationRule>
