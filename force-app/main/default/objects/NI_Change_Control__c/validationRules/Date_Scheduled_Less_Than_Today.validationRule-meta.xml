<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_Scheduled_Less_Than_Today</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Date_Scheduled__c &lt;  NOW() , ISPICKVAL(Change_Status__c,&quot;Open&quot;),  $Profile.Name != &quot;System Administrator&quot;)</errorConditionFormula>
    <errorDisplayField>Date_Scheduled__c</errorDisplayField>
    <errorMessage>You cannot set the Date Scheduled to a date that is earlier than today</errorMessage>
</ValidationRule>
