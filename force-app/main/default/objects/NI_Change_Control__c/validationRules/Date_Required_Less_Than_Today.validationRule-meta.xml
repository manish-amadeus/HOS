<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_Required_Less_Than_Today</fullName>
    <active>true</active>
    <description>The Date Required date cannot be less than today</description>
    <errorConditionFormula>RecordTypeId = &quot;01260000000166y&quot; &amp;&amp; AND(Date_Required__c  &lt;  Today() , ISPICKVAL(Change_Status__c,&quot;Open&quot;),   
$Profile.Name != &quot;System Administrator&quot;)</errorConditionFormula>
    <errorDisplayField>Date_Required__c</errorDisplayField>
    <errorMessage>You cannot set the Date Required to a date earlier than today</errorMessage>
</ValidationRule>
