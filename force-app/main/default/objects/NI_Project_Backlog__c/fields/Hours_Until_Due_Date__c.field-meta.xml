<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hours_Until_Due_Date__c</fullName>
    <externalId>false</externalId>
    <formula>IF( ISPICKVAL(Request_Status__c,&quot;Completed&quot;), NULL, 
( Requested_Completion_Date__c - TODAY() ) *5/7 *4 )</formula>
    <inlineHelpText>Project Working Hours remaining until Due Date (based on 4 hours per working day).</inlineHelpText>
    <label>Hours Until Due Date</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
