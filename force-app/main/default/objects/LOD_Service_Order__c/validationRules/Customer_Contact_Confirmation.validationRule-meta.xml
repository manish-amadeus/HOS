<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Customer_Contact_Confirmation</fullName>
    <active>true</active>
    <errorConditionFormula>AND ( Do_Not_Send_Customer_Confirmation__c = false, isblank ( Customer_Contact__c ))</errorConditionFormula>
    <errorMessage>Please update Customer Contact information or check the &apos;Do Not Send Customer Confirmation&apos; field.</errorMessage>
</ValidationRule>
