<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>On_Hold_Requires_Description</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Status__c , &quot;On Hold&quot;), ISBLANK( Reason_For_Hold__c ) )</errorConditionFormula>
    <errorDisplayField>Reason_For_Hold__c</errorDisplayField>
    <errorMessage>Enter a reason why this is On Hold</errorMessage>
</ValidationRule>
