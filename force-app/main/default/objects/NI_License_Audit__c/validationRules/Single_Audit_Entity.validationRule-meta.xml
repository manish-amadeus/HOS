<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Single_Audit_Entity</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
   NOT( ISBLANK(Cluster__c) ), 
   NOT( ISBLANK(Asset__c) ) 
)</errorConditionFormula>
    <errorMessage>We can only audit a single entity.  Please select either a Cluster or a Deployment Instance, not both.</errorMessage>
</ValidationRule>
