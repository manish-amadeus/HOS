    <decisions>
        <description>Decides which Team/Column combination the record matches</description>
        <name>ColumnDecision</name>
        <label>ColumnDecision</label>
        <locationX>813</locationX>
        <locationY>366</locationY>
        <defaultConnector>
            <targetReference>LoopColumns</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>DTSPhase</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>LoopColumns.Name</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>$Record.agf__Product_Area__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>LoopColumns.agf__Team__r.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>DTS Team</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>AssignColumnColorDTSTeam</targetReference>
            </connector>
            <label>DTSPhase</label>
        </rules>
        <rules>
            <name>EdDevTriaged</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>LoopColumns.agf__Team__r.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Educational Development</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.agf__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Triaged</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>LoopColumns.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>X - Sprint - 1</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>AssignEdDevTriagedColumn</targetReference>
            </connector>
            <label>EdDevTriaged</label>
        </rules>
        <rules>
            <name>EdDevStatus</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>LoopColumns.agf__Team__r.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Educational Development</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>LoopColumns.Name</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>$Record.agf__Status__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.agf__Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Triaged</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>AssignEdDevColumn</targetReference>
            </connector>
            <label>EdDevStatus</label>
        </rules>
    </decisions>
