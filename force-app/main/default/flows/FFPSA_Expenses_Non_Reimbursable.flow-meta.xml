<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>Starting in 2022 all expenses in FF PSA will be marked as non-reimbursable.  This flow is to provide automation vs. having users update individual expenses; updated via NICC-057924</description>
    <interviewLabel>FFPSA {!$Flow.CurrentDateTime}</interviewLabel>
    <label>FFPSA - Expenses Non-Reimbursable</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>With the use of Citric, all expenses will now be listed as non-reimbursable in FF PSA</description>
        <name>NonReimbursable</name>
        <label>NonReimbursable</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>pse__Non_Reimbursible__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>NonReimbursable</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>pse__Non_Reimbursible__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Resource_Region__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>APCN</stringValue>
            </value>
        </filters>
        <filters>
            <field>Resource_Region__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>APSG</stringValue>
            </value>
        </filters>
        <filters>
            <field>Resource_Region__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>APAU</stringValue>
            </value>
        </filters>
        <filters>
            <field>Resource_Region__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>AP</stringValue>
            </value>
        </filters>
        <object>pse__Expense__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
