        </filters>
        <object>pse__Milestone__c</object>
        <outputReference>CollIMilestoneStatus</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>pse__Project__c</queriedFields>
        <queriedFields>IsActive__c</queriedFields>
        <queriedFields>Milestone_Type__c</queriedFields>
        <queriedFields>pse__Status__c</queriedFields>
