        <locationX>194</locationX>
        <locationY>213</locationY>
        <assignNextValueToReference>IndMilestone</assignNextValueToReference>
        <collectionReference>CollIMilestoneStatus</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>AssignMilestoneStatustoVariable</targetReference>
