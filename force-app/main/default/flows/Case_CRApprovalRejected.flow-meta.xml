<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>NICC-061167; If the Case is rejected, this Flow resets two (2) fields back to a null/none value for further updates</description>
    <environments>Default</environments>
    <interviewLabel>Case_CRApprovalRejected {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case - CR Approval Rejected</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Assigns NULL values to Resolution Type field and resets Approval Status back to Not Submitted</description>
        <name>UpdateCase</name>
        <label>UpdateCase</label>
        <locationX>597</locationX>
        <locationY>283</locationY>
        <inputAssignments>
            <field>Approval_Status__c</field>
            <value>
                <stringValue>Not Submitted</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Resolution_Type__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>70</locationX>
        <locationY>45</locationY>
        <connector>
            <targetReference>UpdateCase</targetReference>
        </connector>
        <filterFormula>OR(ISPICKVAL({!$Record.Approval_Status__c}, &quot;Rejected&quot;),ISPICKVAL({!$Record.Approval_Status__c}, &quot;Recalled&quot;)) &amp;&amp;
NOT(ISBLANK({!$Record__Prior.Change_Request__c}))</filterFormula>
        <object>Case</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
