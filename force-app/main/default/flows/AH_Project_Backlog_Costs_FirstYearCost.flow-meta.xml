            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Updates the First Year Cost field</description>
        <name>UpdateFirstYearCost</name>
        <label>UpdateFirstYearCost</label>
        <locationX>395</locationX>
        <locationY>362</locationY>
        <inputAssignments>
            <field>First_Year_Cost__c</field>
            <value>
                <elementReference>formulaFirstYearCost</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
