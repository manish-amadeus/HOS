<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <decisions>
        <description>Decides if the record is New or if the Amount has changed. No other changes should trigger a change to the First Year Cost field.</description>
        <name>NewOrUpdatedAmountDecision</name>
        <label>NewOrUpdatedAmountDecision</label>
        <locationX>153</locationX>
        <locationY>348</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>IsNew</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>UpdateFirstYearCost</targetReference>
            </connector>
            <label>IsNew</label>
        </rules>
        <rules>
            <name>AmountChanged</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Amount__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>UpdateFirstYearCost</targetReference>
            </connector>
            <label>AmountChanged</label>
        </rules>
    </decisions>
    <description>NICC-058111; Calculates and populates the First Year Cost field for the Project Cost record</description>
    <formulas>
        <description>Calculates the First Year Cost: if Costs Incurred = One Time, formula is Amount/3; otherwise show the Amount</description>
        <name>formulaFirstYearCost</name>
        <dataType>Currency</dataType>
        <expression>IF( ISPICKVAL( {!$Record.Cost_Incurred__c}, &quot;One Time&quot;) , {!$Record.Amount__c} /3,  {!$Record.Amount__c})</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>AH Project Backlog Costs - First Year Cost {!$Flow.CurrentDateTime}</interviewLabel>
    <label>AH Project Backlog Costs - First Year Cost</label>
    <processMetadataValues>
        <name>BuilderType</name>
