<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Business_Systems_Internal</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Offshore_Development_IT</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Project_Contact__c</field>
        <field>Owner</field>
        <field>Additional_Benefits__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>NI_Project_Backlog__c.RecordType</field>
                <operation>notEqual</operation>
                <value>Internal Project</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Auto-Approve Record</label>
        <name>Auto_Approve_Record</name>
    </approvalStep>
    <description>NICC-055369; updated via NICC-056786
Auto-Approves projects if the Organizational Impact = Tactical or Organization Impact = Operational and Estimated Total Net Project Value &lt; $35,000</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 and 2 and 3 and (4 OR (5 AND 6)) and 7</booleanFilter>
        <criteriaItems>
            <field>NI_Project_Backlog__c.RecordType</field>
            <operation>equals</operation>
            <value>Internal Project</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Sponsor__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Request_Status__c</field>
            <operation>equals</operation>
            <value>New,Rejected,Pending Sponsor Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Organizational_Impact__c</field>
            <operation>equals</operation>
            <value>Tactical</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Organizational_Impact__c</field>
            <operation>equals</operation>
            <value>Operational</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Estimated_Total_Net_Project_Value__c</field>
            <operation>lessOrEqual</operation>
            <value>&quot;USD 35,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Approved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Submitted_for_Prioritization_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_Checkbox</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Internal_Project_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Internal Project Auto-Approve</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Update_status_back_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
