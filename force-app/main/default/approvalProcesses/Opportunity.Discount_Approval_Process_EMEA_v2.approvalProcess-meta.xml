<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ContractsAdministrator</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Discount_Approval_Manager_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Discount needs to be approved by Manager</description>
        <label>Approval by Manager</label>
        <name>Approval_by_Manager</name>
        <rejectionActions>
            <action>
                <name>Discount_Approval_Denied_by_Manager</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Discount_Approval_Approved_by_Steve_Lambert</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jstanford@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>All Approvals need Steve Lambert&apos;s approval

4/7/2014 - Changed to go to Jo Stanford per IT Work Ticket: 111790</description>
        <label>All Approvals Need Jo Stanford&apos;s Approval</label>
        <name>All_Approvals_Need_Steve_L_s_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Opportunity_Discount_Approval_Denied_by_Steve_L</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enter the COO Approval Step if &quot;Needs COO Approval&quot; check box is checked</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_COO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>COO Approval</label>
        <name>COO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>COO_Discount_Approval_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>lhorgan@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Only opportunity with &quot;CEO Approval&quot; Checkbox will go into this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_CEO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>CEO&apos;s approval IF Box is checked</label>
        <name>CEO_s_approval_IF_Box_is_checked</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Discount_Denied_by_Jeff</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Discount Approval Process for the EMEA Office.  COO Approval step has been added per Salesforce.com Change Request: NICC-014167</description>
    <emailTemplate>SalesMarketing/Discount_has_been_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Owner</field>
            <operation>equals</operation>
            <value>Scott Reeve,Duncan Osborn,Thomas Simons,Edward Wright,Marc Mordant,Ertug Fisek,Patrik Wennerland,Dan Hiza,Erika Bucsi,Nato Slavikova,Thijs Mijvis MA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Discount_has_Been_Approved_by_All_Parties</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Discount Approval Process - EMEA v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
