<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ContractsAdministrator</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Discount_Approval_Manager_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Discount needs to be approved by Manager</description>
        <label>Approval by Manager</label>
        <name>Approval_by_Manager</name>
        <rejectionActions>
            <action>
                <name>Discount_Approval_Denied_by_Manager</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Discount_Approval_Approved_by_Malcolm_Cheong</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>malcolm.cheong@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Any approvals by Kenny Gao need to be approved by Malcolm Cheong. NICC-024499</description>
        <entryCriteria>
            <formula>BEGINS(Owner.Manager.Manager.Username,  &quot;malcolm.cheong@newmarketinc.com&quot;)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Direct reports to Kenny Gao</label>
        <name>Direct_reports_to_Kenny_Gao</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Opportunity_Discount_Approval_Denied_by_Steve_L</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Discount_Approval_Approved_by_Dan_Hiza</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>dhiza@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Any approvals by Edward Wright  need to be approved by Dan Hiza.</description>
        <entryCriteria>
            <formula>BEGINS(Owner.Manager.Manager.Username, &quot;dhiza@newmarketinc.com&quot;)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Direct reports to Edward Wright</label>
        <name>Direct_reports_to_Edward_Wright</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Opportunity_Discount_Approval_Denied_by_Dan_Hiza</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enter the COO Approval Step if &quot;Needs COO Approval&quot; check box is checked</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_COO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>COO Approval</label>
        <name>COO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>COO_Discount_Approval_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Only opportunity with &quot;CEO Approval&quot; Checkbox will go into this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_CEO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>CEO&apos;s approval IF Box is checked</label>
        <name>CEO_s_approval_IF_Box_is_checked</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Discount_Denied_by_Jeff</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Updated by Lisa E on 8.8.17. Discount Approval Process for the AP Office.  Added COO Approval step per Salesforce.com Change Request: NICC-014167</description>
    <emailTemplate>SalesMarketing/Discount_has_been_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR (
	Owner.Alias = &quot;czhan&quot;,
	Owner.Alias = &quot;cng2&quot;,
	Owner.Alias = &quot;ayap&quot;,
	Owner.Alias = &quot;smart&quot;, 
	Owner.Alias = &quot;jleon&quot;,
	Owner.Alias = &quot;mfan&quot;,
	Owner.Alias = &quot;kliu&quot;,
	Owner.Alias = &quot;kgao&quot;,
        Owner.Alias = &quot;cfu&quot;,
        Owner.Alias = &quot;ewrig&quot;,
        Owner.Alias = &quot;eong&quot;
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Discount_has_Been_Approved_by_All_Parties</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Opportunity_Discount_Approval_Denied_by_Tim</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Discount Approval Process - AP v3</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
