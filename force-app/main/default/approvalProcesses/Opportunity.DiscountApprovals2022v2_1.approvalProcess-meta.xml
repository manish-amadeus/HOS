        </assignedApprover>
        <description>Manager Approval for NORAM Tiers 1 &amp; 2, Sales Regions CHINA, LATAM, MIDEA, INDIA</description>
        <entryCriteria>
            <booleanFilter>(3 or (1 or 2)) and (4 and 5)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Opportunity_Owner_Role__c</field>
                <operation>equals</operation>
                <value>US Enterprise - Tier 1</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Owner_Role__c</field>
                <operation>contains</operation>
                <value>Tier 2</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Sales_Region__c</field>
                <operation>equals</operation>
                <value>LATAM,CHINA,MIDEA,INDIA</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>lessOrEqual</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
