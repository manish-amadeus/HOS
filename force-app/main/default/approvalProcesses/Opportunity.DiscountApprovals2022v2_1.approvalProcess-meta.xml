        </assignedApprover>
        <description>Approval Step for Opportunity Owner</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>lessOrEqual</operation>
                <value>10</value>
            </criteriaItems>
        </entryCriteria>
