<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_to_Approved_Step_1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>sthresher@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>First approver changed from Whitney to Sierra on 8/28/2012</description>
        <label>Approval to Sierra for accuracy check</label>
        <name>ApprovaltoWhitforaccuracycheck</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>StatusUpdatetoApproved2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Final_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Whitney has approved the expense report - move the final approval to Sales Management</description>
        <label>Expense Report Approval to Management</label>
        <name>ExpenseReportApprovaltoJeff</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>StatustoRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>SalesMarketing/Expense_Report_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>User.Division</field>
            <operation>notEqual</operation>
            <value>AP,EMEA</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.CompanyName</field>
            <operation>notEqual</operation>
            <value>Libra OnDemand</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ExpenseReporthasbeenApprovedToOwner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Statusupdatedtoapproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ExpenseReporthasbeenrejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>Statuschangetorejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ChangeStatustoSubmitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>zzz Exp Report Approval Process</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>ChangeStatustoNotSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ExpenseReportRecalled</name>
            <type>Alert</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
