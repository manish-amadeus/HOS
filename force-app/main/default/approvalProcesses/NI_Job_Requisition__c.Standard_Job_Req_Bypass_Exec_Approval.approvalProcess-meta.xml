<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>amelia.rodriguez@amadeus.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Employment_Type__c</field>
        <field>Department__c</field>
        <field>Job_Title__c</field>
        <field>Manager__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Job_Req_Approved_by_CEO</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Status_HR_Working</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amelia.rodriguez@amadeus.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>CEO Approval step</description>
        <label>CEO Approval</label>
        <name>CEO_Approval</name>
        <rejectionActions>
            <action>
                <name>CEO_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Status_Declined</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Bypass Exec Approval Process for the &quot;Standard&quot; Record Type</description>
    <emailTemplate>Job_Requisitions_Templates/Standard_Approval_Submission_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.Name = &quot;Standard&quot;, Bypass_CEO_Approval__c = False, Bypass_Exec_Approval__c = True,NOT(ISPICKVAL(Status__c,&quot;HR Working&quot;)))</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Pending_CEO_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submit_for_CEO_Approval</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Standard Job Req Bypass Exec Approval</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
