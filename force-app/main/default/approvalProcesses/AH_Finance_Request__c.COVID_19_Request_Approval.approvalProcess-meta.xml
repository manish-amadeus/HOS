<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>Relief_Request_Type__c</field>
        <field>Account_Valuation__c</field>
        <field>of_Months_Requested__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jstremel@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tonianne.piscitello@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval Step</label>
        <name>Approval_Step</name>
    </approvalStep>
    <description>COVID - 19 approval request</description>
    <emailTemplate>NIFinanceWorkflowEmails/COVID_Finance_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>AH_Finance_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>COVID-19</value>
        </criteriaItems>
        <criteriaItems>
            <field>AH_Finance_Request__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Not Submitted,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>AH_Finance_Request__c.Relief_Request_Type__c</field>
            <operation>equals</operation>
            <value>Fees Relief Request</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Status_Committee_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Requester_Relief_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_Committee_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Requester_Relief_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Date_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>COVID - 19 Request Approval</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Not_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
