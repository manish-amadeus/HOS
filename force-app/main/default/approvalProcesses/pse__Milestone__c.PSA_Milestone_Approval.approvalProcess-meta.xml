<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Project__c</field>
        <field>pse__Target_Date__c</field>
        <field>pse__Actual_Date__c</field>
        <field>pse__Milestone_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>pse__Milestone__c.Milestone_Type__c</field>
                <operation>notEqual</operation>
                <value>Inclusive Milestone</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Milestone Approved</label>
        <name>Milestone_Approved</name>
    </approvalStep>
    <description>For approval of PSA Project Milestones, initiated by timecard submission against Milestones</description>
    <emailTemplate>PS_Enerprise_Workflows/PSA_Milestone_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>pse__Milestone__c.pse__Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Milestone_Set_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_Set_IIF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_Set_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Milestone_Open_for_Expense_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_Open_for_Time_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_unset_Actual_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_Open</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Milestone_Set_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA Milestone Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>PSA_Milestone_Open_for_Expense_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_Open_for_Time_Entry</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Milestone_unset_Actual_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_Open</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
