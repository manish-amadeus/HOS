<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Internal_IT_CRB_Members</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Request_Summary__c</field>
        <field>Manager_Reviewer__c</field>
        <field>Developer_Compiler__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_Standard</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Approval_Status_Not_Required</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_Reviewer_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Manager_Reviewer_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Manager_Reviewer__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Reviewer Approval</label>
        <name>Manager_Reviewer_Approval</name>
        <rejectionActions>
            <action>
                <name>Change_Status_Compile</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Hosted_RFC_Check_Ready_for_Manager_App</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_Reviewer_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Manager_Reviewer_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_CRB_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Approval_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Internal_IT_CRB_Members</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>CRB Approval Step</description>
        <entryCriteria>
            <criteriaItems>
                <field>NI_Change_Control__c.Change_Status__c</field>
                <operation>equals</operation>
                <value>Pending CRB Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>CRB Approval</label>
        <name>CRB_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Change_Status_Compile</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Hosted_RFC_Check_Ready_for_Manager_App</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jmuise@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>All approvals that have &quot;Financial Systems Change&quot; for the Change Type go to Jannalee Muise for initial approval</description>
        <entryCriteria>
            <criteriaItems>
                <field>NI_Change_Control__c.Change_Type__c</field>
                <operation>includes</operation>
                <value>Financial Systems Change</value>
            </criteriaItems>
        </entryCriteria>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for Financial Systems Internal - IT RFCs</description>
    <emailTemplate>NI_Change_Control/Hosted_RFC_Submitted_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>NI_Change_Control__c.RecordType</field>
            <operation>equals</operation>
            <value>Internal - IT</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Change_Control__c.Ready_for_Manager_Reviewer_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Change_Control__c.Priority__c</field>
            <operation>equals</operation>
            <value>Normal</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Change_Control__c.Change_Type__c</field>
            <operation>includes</operation>
            <value>Financial Systems Change</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Manager_Approve</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Manager_Reviewer_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Manager_Reviewer_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Un_Check_Ready_for_Mgr_Reviewer_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Internal - IT RFC: Financial Systems</label>
    <processOrder>7</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
