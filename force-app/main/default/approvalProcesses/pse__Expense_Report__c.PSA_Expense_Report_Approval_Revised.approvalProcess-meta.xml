<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>pse__Resource__c</field>
        <field>Assignment_End_Date__c</field>
        <field>ER_Due_Date__c</field>
        <field>pse__Project__c</field>
        <field>Name</field>
        <field>pse__Approver__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__First_Expense_Date__c</field>
        <field>pse__Last_Expense_Date__c</field>
        <field>pse__Description__c</field>
        <field>pse__Status__c</field>
        <field>pse__Billable__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Total_Non_Billable_Amount__c</field>
        <field>pse__Total_Reimbursement_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>If the ER is submitted after the ER due date, the ER will first be sent to the users manager for approval</description>
        <entryCriteria>
            <criteriaItems>
                <field>pse__Expense_Report__c.ER_Due_Date__c</field>
                <operation>lessOrEqual</operation>
                <value>TODAY</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Send Expense Report to Manager</label>
        <name>Send_Expense_Report_to_Manager</name>
        <rejectionActions>
            <action>
                <name>PSE_Expense_Report_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>pse__Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Send Expense Report to Approver</label>
        <name>Send_Expense_Report_to_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>PSE_Expense_Report_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>For expenses submitted against customer projects, routes an email to the Central Expense Approver of the Region to which the Resource on the expense report is assigned.
Revised 8/2013 to include an 2nd approval process for customer projects submitted late (beyond 12 noon the following Tuesday)</description>
    <emailTemplate>PS_Enerprise_Workflows/PSA_Expense_Report_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>pse__Expense_Report__c.pse__Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Expense_Report__c.pse__Status__c</field>
            <operation>equals</operation>
            <value>Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Exp_Report_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Incl_Fin_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Exp_Report_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Expense_Report_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Submitted_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submit_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA Expense Report Approval Revised</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>PSA_Exp_Report_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
