<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>Owner</field>
        <field>Anticipated_Revenue_Loss__c</field>
        <field>Cancellation_Notes__c</field>
        <field>Cancel_Renewal_By_Date__c</field>
        <field>Competitor_Lost_To__c</field>
        <field>Activity_Line_Item__c</field>
        <field>Account_Number__c</field>
        <field>Product__c</field>
        <field>Renewal_Cancellation_Quantity__c</field>
        <field>Renewal_Cancellation_Requester__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jstremel@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Days_Late__c &gt; 0</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>Updated per NICC-034374
NICC 053451</description>
    <emailTemplate>Cancellations/Late_Cx_approval_needed_Sales_Executive</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NI_Cancellation__c.Late_Cancellation__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Cancellation__c.Effective_Date__c</field>
            <operation>lessOrEqual</operation>
            <value>TODAY</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Late_Cancellation_Approval_Email_to_Record_Creator</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_Finance_Biling_of_approved_late_cancellation</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Create_Cancellation_Case_to_True2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Late_Cancellation_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Late_Cx_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Cancelled</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Late_Cancellation_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Late_Cancellation_Rejected_Email_to_Record_Creator</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_to_Late_Cancellation_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_late_cx_rejected_date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Late CXL - Effective Date &lt;= TODAY v4</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
