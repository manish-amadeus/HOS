<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_to_Approved_Step_1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jo.hopkins@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval to Jo Hopkins for accuracy check</label>
        <name>ApprovaltoJoHopkinsforaccuracycheck</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_LOD_ER_Status_to_approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Statusupdatedtoapproved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Final_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>All Approvals go to Greg Hopkins</label>
        <name>All_Approvals_go_to_Greg_Hopkins</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>StatustoRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>SalesMarketing/Expense_Report_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>User.Email</field>
            <operation>contains</operation>
            <value>libraOnDemand.com</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.CompanyName</field>
            <operation>contains</operation>
            <value>Libra OnDemand</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ExpenseReporthasbeenApprovedToOwner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_LOD_ER_Status_to_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Statusupdatedtoapproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Expense_Report_has_been_Rejected_To_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_LOD_ER_Status_to_rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Statuschangetorejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ChangeStatustoSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Libra_Exp_Report_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>zzz Libra Exp Report Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>ChangeStatustoNotSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ExpenseReportRecalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Libra_ER_Status_set_to_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
