        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>kristina.scontras@newmarketinc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Discount_Total_Amount__c</field>
        <field>Discount_Total_Percent__c</field>
        <field>Discount_Notes__c</field>
        <field>StageName</field>
        <field>CloseDate</field>
        <field>Discount_Expiration__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3 OR 4 OR (5 AND 6)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Software__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>greaterThan</operation>
                <value>5</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Support__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Subscriptions__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Sale_Price_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 1,000,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>prantilla@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR (2 AND 3) OR (4 AND 5) OR 6 OR 7 OR 8</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Software__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>greaterThan</operation>
                <value>5</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>lessThan</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>equals</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 2,500&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 25,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Support__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Subscriptions__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paul Rantilla Approval</label>
        <name>Paul_Rantilla_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mberggren@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR 3 OR (4 AND 5)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>lessThan</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 25,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>equals</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 5,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Meghan Norwood Approval</label>
        <name>Meghan_Norwood_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR (2 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 25,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>equals</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 5,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Bill Sintiris Approval</label>
        <name>Bill_Sintiris_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hazem.hussein@amadeus.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Year_One_Sale_Price_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 1,000,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>greaterThan</operation>
