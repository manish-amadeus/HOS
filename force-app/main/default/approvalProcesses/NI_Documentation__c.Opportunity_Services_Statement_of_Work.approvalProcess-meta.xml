<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ClientServices</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>RecordType</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Opportunity__c</field>
        <field>Document_Name__c</field>
        <field>Description__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Final_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Final Approver</description>
        <label>Final Approver</label>
        <name>Final_Approver</name>
    </approvalStep>
    <description>Services Statement of Work Approval Process for Opportunities</description>
    <emailTemplate>NI_Documentation/Approval_NI_Documentation</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.Name = &quot;Pre-Sales Documentation&quot;, NOT(ISBLANK(Opportunity__c)), NOT(ISPICKVAL(Approval_Status__c,&quot;Submitted for Approval&quot;)), NOT(ISPICKVAL(Approval_Status__c,&quot;Approved&quot;)), ISPICKVAL(Document_Type__c,&quot;Statement of Work&quot;), NOT(ISBLANK( Final_Approver__c)))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NI_Related_Documentation_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NI_Related_Documentation_Statement_of_Work_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>NI_Related_Documentation_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NI_Related_Documentation_Statement_of_Work_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>NI_Related_Documentation_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity - Services Statement of Work</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
