<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CEOCFO</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Resource__c</field>
        <field>pse__Project__c</field>
        <field>pse__Milestone__c</field>
        <field>pse__Project_Phase__c</field>
        <field>pse__Start_Date__c</field>
        <field>pse__End_Date__c</field>
        <field>pse__Status__c</field>
        <field>pse__Sunday_Hours__c</field>
        <field>pse__Sunday_Notes__c</field>
        <field>pse__Monday_Hours__c</field>
        <field>pse__Monday_Notes__c</field>
        <field>pse__Tuesday_Hours__c</field>
        <field>pse__Tuesday_Notes__c</field>
        <field>pse__Wednesday_Hours__c</field>
        <field>pse__Wednesday_Notes__c</field>
        <field>pse__Thursday_Hours__c</field>
        <field>pse__Thursday_Notes__c</field>
        <field>pse__Friday_Hours__c</field>
        <field>pse__Friday_Notes__c</field>
        <field>pse__Saturday_Hours__c</field>
        <field>pse__Saturday_Notes__c</field>
        <field>pse__Timecard_Notes__c</field>
        <field>pse__Total_Hours__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Auto-approves the timecard if the project allows, otherwise sends approval request to manager</description>
        <entryCriteria>
            <formula>pse__Project__r.Timecards_Require_Approval__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Auto Approve or Send to Manager</label>
        <name>Auto_Approve_or_Send_to_Manager</name>
    </approvalStep>
    <description>Automatically approves submitted timecards for projects in which the &quot;Timecards Require Approval&quot; option is not set. Otherwise, forwards an approval request to the Resource&apos;s User.Manager.</description>
    <emailTemplate>PS_Enerprise_Workflows/PSE_Timecard_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>pse__Timecard_Header__c.pse__Submitted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Set_Timecard_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Set_Timecard_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Include_in_FI_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSE_Rejected_Timecard_e_mail_notification_to_Resource</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Un_check_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PSA Timecard Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
