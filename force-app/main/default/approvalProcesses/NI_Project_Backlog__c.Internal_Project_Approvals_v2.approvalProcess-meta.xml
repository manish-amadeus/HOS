<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Business_Systems_Internal</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Offshore_Development_IT</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Project_Contact__c</field>
        <field>Owner</field>
        <field>Additional_Benefits__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Pending_CFO_Approval</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sponsor_Approved_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sponsor_Approved_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Sponsor__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sponsor Approval</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CFO_Approved_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CFO_Approved_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>dnieto@amadeus.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>NI_Project_Backlog__c.Estimated_Total_Net_Project_Value__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;USD 500,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>CFO Approval</label>
        <name>CFO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>NICC-055369; updated via NICC-056786; updated via NICC-059595</description>
    <emailTemplate>NI_Project_Backlog/Process_Improvement_Sponsor_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NI_Project_Backlog__c.RecordType</field>
            <operation>equals</operation>
            <value>Internal Project</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Sponsor__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Organizational_Impact__c</field>
            <operation>equals</operation>
            <value>Operational,Strategic</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Request_Status__c</field>
            <operation>equals</operation>
            <value>New,Rejected,Pending Sponsor Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Project_Backlog__c.Approved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Submitted_for_Prioritization_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_Checkbox</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Internal_Project_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Sponsor_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Internal Project Approvals v2</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>Set_Request_Status_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
