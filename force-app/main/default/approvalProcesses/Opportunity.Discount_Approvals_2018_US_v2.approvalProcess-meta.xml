<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Contracts_Group</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Opportunity_Discount_Submit_for_Approval</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>jstremel@newmarketinc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>jzurhellen@newmarketinc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>kristina.scontras@newmarketinc.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Discount_Total_Amount__c</field>
        <field>Discount_Total_Percent__c</field>
        <field>Discount_Notes__c</field>
        <field>StageName</field>
        <field>CloseDate</field>
        <field>Discount_Expiration__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3 OR 4 OR (5 AND 6)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Software__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>greaterThan</operation>
                <value>5</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Support__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Subscriptions__c</field>
                <operation>greaterThan</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Sale_Price_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 1,000,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jpyser@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Changed to go to Joel Pyser</description>
        <entryCriteria>
            <formula>CONTAINS(Owner.Manager.Username, &quot;jpyser@newmarketinc.com&quot;) 
  &amp;&amp;
  (
    Discount_Percent_Software__c &gt; 0.1
  ||
  (Discount_Percent_Services__c &gt; 0.05
  &amp;&amp;
  Discount_Percent_Services__c &lt; 1)
  ||
  (Discount_Percent_Services__c = 1
  &amp;&amp;
  Discount_Amount_Services__c &gt; 2500)
  ||
  Discount_Amount_Services__c &gt; 25000
  ||
  Discount_Percent_Support__c &gt; 0
  ||
  Discount_Percent_Subscriptions__c &gt; 0.1
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paul Rantilla Approval</label>
        <name>Paul_Rantilla_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jflynn@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>NOT(CONTAINS(Owner.Manager.Username, &quot;jpyser@newmarketinc.com&quot;))
&amp;&amp;
(
Discount_Percent_Software__c &gt; 0.0
||
(Discount_Percent_Services__c &gt; 0.05
&amp;&amp;
Discount_Percent_Services__c &lt; 1)
||
(Discount_Percent_Services__c = 1
&amp;&amp;
Discount_Amount_Services__c &gt; 2500)
||
Discount_Amount_Services__c &gt; 25000
||
Discount_Percent_Support__c &gt; 0
||
Discount_Percent_Subscriptions__c &gt; 0.1
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Joe Flynn Approval Step</label>
        <name>Joe_Flynn_Approval_Step</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mberggren@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR 3 OR (4 AND 5)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>lessThan</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 25,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>equals</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 5,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Meghan Norwood Approval</label>
        <name>Meghan_Norwood_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR (2 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 25,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Percent_Services__c</field>
                <operation>equals</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Discount_Amount_Services__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 5,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Bill Sintiris Approval</label>
        <name>Bill_Sintiris_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Year_One_Sale_Price_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 1,000,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Year_One_Discount_Percent__c</field>
                <operation>greaterThan</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
        <label>CEO Approval</label>
        <name>Hazem_Hussein_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>NICC-029837 - Activate US Discount Approval
NICC-026385: New Discount/Comp Approval Process (US Region)
Updated 03/13/2018 Per NICC-026456</description>
    <emailTemplate>Opportunity/Opportunity_Discount_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Sales_Region__c</field>
            <operation>equals</operation>
            <value>US</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.CurrencyIsoCode</field>
            <operation>equals</operation>
            <value>USD</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Discount_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Discount_Approval_Status</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Discount_Approval_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Discount_Approval_Status</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Discount_Approval_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Discount_Approval_Status</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Discount Approvals 2018 - US v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Discount_Approval_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
