<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CEOCFO</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ContractsAdministrator</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>US</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>USCSDManagement</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>USDirectorofSales</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>WWSales</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Discount needs to be approved by Manager</description>
        <label>Approval by Manager</label>
        <name>Approval_by_Manager</name>
        <rejectionActions>
            <action>
                <name>Discount_Approval_Denied_by_Manager</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>prantilla@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Temporarily set to Jenny in Paul&apos;s absence. 2016-07-11. 
Change back to Paul on 2016-07-18</description>
        <label>All Approvals Need Paul&apos;s Approval</label>
        <name>All_Approvals_Need_Paul_s_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Your_Discount_Approval_has_been_Denied_by_Lee</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Enter the COO Approval Step if &quot;Needs COO Approval&quot; check box is checked</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_COO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>COO Approval</label>
        <name>COO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>COO_Discount_Approval_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bsintiris@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Only opportunity with &quot;CEO Approval&quot; Checkbox will go into this step</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Needs_CEO_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>CEO&apos;s approval IF Box is checked</label>
        <name>CEO_s_approval_IF_Box_is_checked</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Discount_Denied_by_Jeff</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Updated East and West per NICC-025432
Cloned from Discount Approval Process v3.  Added COO Approval step per Salesforce.com Change Request: NICC-014167</description>
    <emailTemplate>SalesMarketing/Discount_has_been_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>/* Updated By Stu Emery on 3/14/2016 to include new Role */
/* Hierarchy */
OR (
    Owner.Manager.UserRole.Name = &quot;US Corporate&quot;, 
    Owner.Manager.UserRole.Name = &quot;US Regional&quot;, 
    Owner.Manager.UserRole.Name = &quot;US Regional S&amp;C&quot;,
    Owner.Manager.UserRole.Name = &quot;US Regional SO&quot;
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Discount_has_Been_Approved_by_All_Parties</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Discount Approval Process v4</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
