<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>StatusUpdatetoApproved2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Final_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Move the final approval to Sales Management if the manager &lt;&gt; Steve Stearns</description>
        <entryCriteria>
            <criteriaItems>
                <field>Expense_Report__c.Final_Approver__c</field>
                <operation>notEqual</operation>
                <value>Steve Stearns</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Expense Report Approval to Management</label>
        <name>ExpenseReportApprovaltoJeff</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Statusupdatedtoapproved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>sstearns@newmarketinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>All Approvals go to Steve Stearns</label>
        <name>All_Approvals_go_to_Steve_Stearns</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>StatustoRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>created by Pete D - 2/12/13. Steve Stearns asked that the accuracy check be removed.</description>
    <emailTemplate>SalesMarketing/Expense_Report_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.Division</field>
            <operation>equals</operation>
            <value>AP</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ExpenseReporthasbeenApprovedToOwner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Statusupdatedtoapproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ExpenseReporthasbeenrejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>Statuschangetorejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ChangeStatustoSubmitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>zzz Exp Report Approval Process 2013</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>ChangeStatustoNotSubmitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ExpenseReportRecalled</name>
            <type>Alert</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
