<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Hosted_HRM_RFC_Submit_for_Approval</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>HostedRFCCRBMembers</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ODE</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ODO</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ServicesDataServices</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ServicesIntegrations</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ServicesRFP</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>ServicesSE</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SupportBRT</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SupportEscalations</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SupportIntegrations</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SupportTeamLeads</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Request_Summary__c</field>
        <field>Manager_Reviewer__c</field>
        <field>Developer_Compiler__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CRB_Approval_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_Reviewer_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Manager_Reviewer_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Pending_CRB_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Manager_Reviewer__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Reviewer Approval</label>
        <name>Manager_Reviewer_Approval</name>
        <rejectionActions>
            <action>
                <name>Change_Status_Compile</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Hosted_RFC_Check_Ready_for_Manager_App</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_Reviewer_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Manager_Reviewer_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_CRB_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Approval_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>HostedRFCCRBMembers282491</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>CRB Approval Step</description>
        <entryCriteria>
            <criteriaItems>
                <field>NI_Change_Control__c.Change_Status__c</field>
                <operation>equals</operation>
                <value>Pending CRB Approval</value>
            </criteriaItems>
        </entryCriteria>
        <label>CRB Approval</label>
        <name>CRB_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Change_Status_Compile</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRB_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Hosted_RFC_Check_Ready_for_Manager_App</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process for Hosted RFCs that have a Priority of  &quot;Normal&quot;</description>
    <emailTemplate>NI_Change_Control/Hosted_RFC_Submitted_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>NI_Change_Control__c.RecordType</field>
            <operation>equals</operation>
            <value>Hosted RFC</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Change_Control__c.Ready_for_Manager_Reviewer_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Change_Control__c.Priority__c</field>
            <operation>equals</operation>
            <value>Normal</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Manager_Approve</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Manager_Reviewer_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Manager_Reviewer_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Un_Check_Ready_for_Mgr_Reviewer_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Hosted RFC: Normal Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Change_Status_Compile</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Manager_Reviewer_Status_Blank</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
