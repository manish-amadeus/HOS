<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Offshore_Contractor_Admin_MTech</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Company__c</field>
        <field>Development_Group__c</field>
        <field>Project_Name__c</field>
        <field>Team_Manager__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>MTech_Contractor_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Q_JR_Offshore_Contractor_Approval_MTech</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>First Approver</label>
        <name>First_Approver</name>
        <rejectionActions>
            <action>
                <name>Offshore_Contractor_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process for the &quot;MTech Contractor - Open&quot; Record Type</description>
    <emailTemplate>Job_Requisitions_Templates/MTech_Contractor_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.Name = &quot;MTech Contractor - Open&quot;, ISPICKVAL(Development_Group__c,&quot;MTech&quot;))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Off_Shore_Contractor_Email_ithelpdesk</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Record_Type_MTech_Contractor_Closed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Closed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Declined</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_In_Process</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>MTech Contractor Approval Process</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
