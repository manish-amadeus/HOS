<aura:component controller="AH_Rally_DataPush" implements="flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="pBar" type="boolean" default="True"/>
    <aura:attribute name="msg" type="boolean" default="False"/>
    <aura:attribute name="dataLink" type="string" />
    <aura:attribute name="caseID" type="string" />
    <div aura:id="div1"></div>

    <c:AH_Rally_Error aura:id = "msgs" />

    <aura:if isTrue="{!v.msg}">  
        <div> {!v.dataLink}</div>
        <div class="slds-align_absolute-center" style="height: 4rem;"><lightning:button label="OK" onclick="{!c.handleSaveRecord}" /></div>
    </aura:if>
    
    <aura:if isTrue="{!v.pBar}"> 
        <div class="exampleHolder slds-spinner" >
            <lightning:spinner aura:id="mySpinner" variant="brand" size="medium"/>
        </div>
    </aura:if>
    
</aura:component>