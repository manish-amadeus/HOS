<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Notificaitonemail</fullName>
        <description>Notificaiton email</description>
        <protected>false</protected>
        <recipients>
            <recipient>semery@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>NISFDCSystemAdminEmails/IntegrationJobsNotificaiton</template>
    </alerts>
    <rules>
        <fullName>Clarify Asset Job Stalled</fullName>
        <actions>
            <name>Notificaitonemail</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Job_Master_File__c.Last_Run_Date__c</field>
            <operation>lessThan</operation>
            <value>YESTERDAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Job_Master_File__c.Name</field>
            <operation>equals</operation>
            <value>Clarify Assets Job</value>
        </criteriaItems>
        <description>To notify sys admin when the clarify asset job has stalled and is not running.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
