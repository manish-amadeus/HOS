<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Assigned_Date</fullName>
        <field>Assigned_Date__c</field>
        <formula>LastModifiedDate</formula>
        <name>Update Assigned Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Complete_Date</fullName>
        <field>Complete_Date__c</field>
        <formula>LastModifiedDate</formula>
        <name>Update Complete Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>MSD Ticket - Update Assigned Date</fullName>
        <actions>
            <name>Update_Assigned_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Assigned Date is updated when the Assigned Admin field is updated</description>
        <formula>AND(
NOT(ISPICKVAL( Assigned_admin__c, &quot;&quot; )),
ISBLANK( Assigned_Date__c )
)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Update Complete Date</fullName>
        <actions>
            <name>Update_Complete_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Shows the date when the status is updated to Complete</description>
        <formula>AND(
ISCHANGED (Status__c ),
OR(
ISPICKVAL(Status__c , &quot;Closed&quot;),
ISPICKVAL(Status__c , &quot;Completed&quot;),
ISPICKVAL(Status__c , &quot;Solved&quot;),
ISPICKVAL(Status__c , &quot;Closed in 1st contact&quot;),
ISPICKVAL(Status__c , &quot;Solved in 1st contact&quot;)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
