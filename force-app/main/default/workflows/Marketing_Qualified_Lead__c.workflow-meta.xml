<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>MQL_More_than_1_day_old_and_Status_Passed_to_Sales</fullName>
        <ccEmails>jphelps@newmarketinc.com</ccEmails>
        <description>MQL - More than 1 day old and Status = Passed to Sales</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>SalesMarketing/MQL_Passed_to_Sales_1_Day_Old</template>
    </alerts>
    <alerts>
        <fullName>MQL_More_than_3_days_old_and_Status_Passed_to_Sales</fullName>
        <description>MQL - More than 3 days old and Status = Passed to Sales</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <recipients>
            <recipient>semery@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>NISalesWorkflowEmails/MQL_Passed_to_Sales_3_Days_Old</template>
    </alerts>
    <rules>
        <fullName>MQL Passed to Sales Greater Than 1 Day</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Marketing_Qualified_Lead__c.Status__c</field>
            <operation>equals</operation>
            <value>Passed to Sales</value>
        </criteriaItems>
        <description>Salesforce.com Change Request: NICC-007780

Send an e-mail to the MQL owner if it has been more than 3 days since the MQL was created and the Status equals &quot;Passed to Sales&quot;

NICC-013806 Changed Days 5/12/2015</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>MQL_More_than_1_day_old_and_Status_Passed_to_Sales</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Marketing_Qualified_Lead__c.CreatedDate</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
