    <fieldUpdates>
        <fullName>CampaignStatusMarkedComplete</fullName>
        <field>Status</field>
        <literalValue>Completed</literalValue>
        <name>Campaign Status Marked Complete</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Add Campaign Actual Cost</fullName>
        <active>true</active>
        <formula>AND( BEGINS( Name , &quot;Event&quot;), ISBLANK(  ActualCost ))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Add_Actual_Cost</name>
                <type>Task</type>
            </actions>
            <offsetFromField>Campaign.EndDate</offsetFromField>
            <timeLength>7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Add Campaign Budgeted Cost</fullName>
        <active>true</active>
        <formula>AND( BEGINS( Name , &quot;Event&quot;), ISBLANK(  BudgetedCost  ))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Fill_in_Budget_Cost</name>
                <type>Task</type>
            </actions>
            <offsetFromField>Campaign.StartDate</offsetFromField>
            <timeLength>-7</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Turn Emails Grey</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Campaign.Name</field>
            <operation>startsWith</operation>
            <value>Email</value>
        </criteriaItems>
        <criteriaItems>
            <field>Campaign.Status</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Turn Emails Purple</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Campaign.Link_to_Final_Email_Copy__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>If emails have copy in Link to Final Email Copy turn Purple</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Turn Emails Red</fullName>
