<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Alert_Support_From_Task</fullName>
        <ccEmails>hospitality.GlobalSupportManagement@amadeus.com</ccEmails>
        <ccEmails>L1CustomerSupportSupervisors@amadeus.com</ccEmails>
        <description>Alert Support From Task</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Support_Email_Templates/Sales_to_Support_Supervisors_case</template>
    </alerts>
    <alerts>
        <fullName>Support_Log_Call_Activity_Notification</fullName>
        <description>Support Log a Call - Activity Notification</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>AH_Support_Email_Templates_Global/Support_Log_a_Call_Activity_Notification</template>
    </alerts>
    <fieldUpdates>
        <fullName>INTGR_Assigned_To_Winaproach_User</fullName>
        <description>Sets the Assigned To field to the Winaproach Integration User</description>
        <field>OwnerId</field>
        <lookupValue>winaproach.user@newmarketinc.com</lookupValue>
        <lookupValueType>User</lookupValueType>
        <name>INTGR Assigned To = Winaproach User</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>INTGR Amadeus Parallel Investigation Assigned To</fullName>
        <actions>
            <name>INTGR_Assigned_To_Winaproach_User</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Task.RecordTypeId</field>
            <operation>equals</operation>
            <value>Amadeus Parallel Investigation</value>
        </criteriaItems>
        <description>NICC-021515
When a Task record is created with the &quot;Amadeus Parallel Investigation&quot; Record Type, the Assigned To field is set to the Winaproach Integration User (winaproach.user@newmarketinc.com) so that Win@proach can send updates to Salesforce</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
