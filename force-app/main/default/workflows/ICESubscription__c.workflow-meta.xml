<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>ICE_Document_Upload_is_Complete</fullName>
        <ccEmails>ni.delphifdcmergetemplate@igate.com</ccEmails>
        <description>ICE Document Upload is Complete</description>
        <protected>false</protected>
        <recipients>
            <recipient>dkey@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>rakesh.kapuriya@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>vikram.mewada@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>virenkumar.patel@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Support_Email_Templates/ICE_Documents_Completed_By_User</template>
    </alerts>
    <alerts>
        <fullName>Send_Email_To_ICE_Manager</fullName>
        <description>Send Email To ICE Manager</description>
        <protected>false</protected>
        <recipients>
            <recipient>dkey@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Support_Email_Templates/ICE_Completed_By_User_Notification</template>
    </alerts>
    <rules>
        <fullName>ICE Completed By User</fullName>
        <actions>
            <name>Send_Email_To_ICE_Manager</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>ICESubscription__c.ReviewPropertiesAndUsersCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>ICESubscription__c.PropertySettingsCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>ICESubscription__c.UserSettingsCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>ICESubscription__c.AcceptOnlineTermsCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>ICESubscription__c.UploadMergeDocumentsCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>When all steps are checked send email.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>ICE Documents Completed By User</fullName>
        <actions>
            <name>ICE_Document_Upload_is_Complete</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>ICESubscription__c.UploadMergeDocumentsCompleted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Workflow that emails iGate team and Kim Goodwin when the documents are complete.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
