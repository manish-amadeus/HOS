    <rules>
        <fullName>CS - Auto-Close GDS Bellhop Cases w%2Fo Attachments</fullName>
        <actions>
            <name>Update_Case_Product_Line_to_iHotelier</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Case_Reason_to_Unassisted_Closure</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Case_Record_Type_to_Closed_Case</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Has_No_DI_Checkbox</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Module_to_GDS_ODD</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Status_to_Closed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.SuppliedEmail</field>
            <operation>equals</operation>
            <value>bellhop@ihotelier.com</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Subject</field>
            <operation>startsWith</operation>
            <value>(IH Policy Notification:,(IH GDS Publication</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Subject</field>
            <operation>contains</operation>
            <value>Cancellation Policy,Deposit Policy,Guarantee Policy,PUBLISH RATEPLAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Subject</field>
            <operation>notContain</operation>
            <value>UNPUBLISH RATEPLAN,UNPUBLISH ROOMTYPE</value>
        </criteriaItems>
        <criteriaItems>
            <field>EmailMessage.HasAttachment</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>NICC-047209 - Related to the TC Customer Support Migration Project. This workflow rule auto-closes GDS cases created from certain automated iHotelier bellhop system notifications.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Incoming Email Received on Case</fullName>
        <actions>
            <name>Set_Case_IncomingEmailDate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>EmailMessage.Incoming</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Rally Support,Case,Close Case</value>
        </criteriaItems>
        <description>NICC-049998 - Rule returns True when an email is incoming and the case record type is &quot;Case&quot;, &quot;Close Case&quot; or &quot;Rally Support&quot;.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
