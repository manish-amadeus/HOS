    <rules>
        <fullName>Freeze User</fullName>
        <active>true</active>
        <description>Time dependent Workflow Rule to freeze the user record based on the Expiration Date</description>
        <formula>AND(NOT(ISBLANK(Expiration_Date__c)), Freeze_User__c != true)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Freeze_User_Check_Box</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>User.Expiration_Date__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>New User - Missing Department Code</fullName>
        <actions>
            <name>New_Standard_User_Missing_Department_Code_E_mail_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Salesforce.com Change Request:  NICC-013684

Send an e-mail when a new Standard User is created and the Department Code field is not filled in</description>
        <formula>AND(ISBLANK(DepartmentCode__c), ISPICKVAL(UserType,&quot;Standard&quot;))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
