<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>License_Audit_Closed_Phase_Notification</fullName>
        <description>License Audit Closed Phase Notification</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>License_Audit/License_Audit_Closed_Notification</template>
    </alerts>
    <rules>
        <fullName>License Audit - Phase Closed</fullName>
        <actions>
            <name>License_Audit_Closed_Phase_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>NI_License_Audit__c.Phase__c</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <description>Salesforce.com Change Request: NICC-014431

Handles the Workflow Logic when the Phase of a license audit record is changed to &quot;Closed&quot;</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
