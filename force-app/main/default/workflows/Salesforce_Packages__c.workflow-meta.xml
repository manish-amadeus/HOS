<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Unique_Field</fullName>
        <description>This updates Name_Prefix_Publisher__c field on Salesforce Package object.</description>
        <field>Name_Prefix_Publisher__c</field>
        <formula>Name  +  Namespace_Prefix__c  +  Publisher__c</formula>
        <name>Update Name Prefix Publisher</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Update Unique Key On Saleforce Package</fullName>
        <actions>
            <name>Update_Unique_Field</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This workflow automatically updates</description>
        <formula>(Name_Prefix_Publisher__c == null) || (ISCHANGED(Name)) ||  (ISCHANGED(Namespace_Prefix__c)) || (ISCHANGED(Publisher__c ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
