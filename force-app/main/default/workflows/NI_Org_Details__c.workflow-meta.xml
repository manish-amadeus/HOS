<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>No_Primary_Account_Entered</fullName>
        <description>No Primary Account Entered</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>NI_Org_Details/No_Primary_Account</template>
    </alerts>
    <alerts>
        <fullName>Trial_Expiration_Alert</fullName>
        <ccEmails>Suzanne.LeDuc@amadeus.com</ccEmails>
        <description>Trial Expiration Alert</description>
        <protected>false</protected>
        <recipients>
            <field>Newmarket_Requester__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>NI_Org_Details/Trial_Will_Expire</template>
    </alerts>
    <alerts>
        <fullName>X90_Day_reminder</fullName>
        <description>90 Day reminder</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Account_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>NI_Org_Details/X90_day_reminder</template>
    </alerts>
    <fieldUpdates>
        <fullName>Disable_Polling_True</fullName>
        <description>Salesforce.com Change Request: NICC-007567

Check the Disable Polling checkbox</description>
        <field>DisablePolling__c</field>
        <literalValue>1</literalValue>
        <name>Disable Polling - True</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Inactive - Check Disable Polling</fullName>
        <actions>
            <name>Disable_Polling_True</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>NI_Org_Details__c.Inactive__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Salesforce.com Change Request: NICC-007567 

If the Inactive checkbox is checked, check the Disable Polling checkbox</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Org renewal - 90 day</fullName>
        <active>true</active>
        <formula>Annual_Salesforce_Renewal_Date__c &gt;  TODAY() + 90</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>X90_Day_reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>NI_Org_Details__c.Annual_Salesforce_Renewal_Date__c</offsetFromField>
            <timeLength>-90</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Trial Expiration Alert Email</fullName>
        <active>true</active>
        <criteriaItems>
            <field>NI_Org_Details__c.Org_Status__c</field>
            <operation>equals</operation>
            <value>Trial</value>
        </criteriaItems>
        <criteriaItems>
            <field>NI_Org_Details__c.Newmarket_Requester__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>NICC-012951</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Trial_Expiration_Alert</name>
                <type>Alert</type>
            </actions>
            <timeLength>21</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
