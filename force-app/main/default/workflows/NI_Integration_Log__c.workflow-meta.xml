<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>CRS_Case_Failed_Message_Max_Retry_E_mail_Alert</fullName>
        <ccEmails>crs.escalation@amadeus.com</ccEmails>
        <description>CRS Case Failed Message Max Retry E-mail Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>dmarvez_ni@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>philipl@newmarketinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>NI_Integration_Templates/NI_Integration_Max_Retry_Failures</template>
    </alerts>
    <rules>
        <fullName>Maximum Failed Retry Attempts Alert</fullName>
        <actions>
            <name>CRS_Case_Failed_Message_Max_Retry_E_mail_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>NICC-021502

Sends an e-mail  notification when the maximum retry attempts on an NI Integration Log record has been reached.</description>
        <formula>AND( 
 ISCHANGED(Do_Retries__c), 
 Do_Retries__c = false, 
 PRIORVALUE(Do_Retries__c) = true,
 ISPICKVAL(Status__c,&quot;Failed&quot;)  
 )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
